{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES6",
        "lib": ["ESNext"],
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist",
        "rootDir": "./src",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "declaration": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}